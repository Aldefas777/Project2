<Page x:Class="tren3_4_Makarov.Pages.PageEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tren3_4_Makarov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEdit">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock>Адрес</TextBlock>
                <TextBox x:Name="txtAdress" Style="{StaticResource txtBox}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock>Тип материала</TextBlock>
                <ComboBox x:Name="comboOwner" Width="150" Height="30"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock>Расстояние</TextBlock>
                <TextBox x:Name="txtRasstoyanie" Style="{StaticResource txtBox}"></TextBox>
            </StackPanel>
        </StackPanel>
        <Button Style="{StaticResource btnMain}" Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" Click="Button_Click"></Button>
    </Grid>
</Page>
